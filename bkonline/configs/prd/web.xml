<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>bkonline_dev</display-name>
	<filter>
		<filter-name>bkonline</filter-name>
		<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>bkonline</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<servlet>
		<servlet-name>ParameterServlet</servlet-name>
		<servlet-class>com.cct.inhouse.web.config.parameter.servlet.ParameterServlet</servlet-class>
		<init-param>
			<param-name>parameterfile</param-name>
			<param-value>/WEB-INF/parameter.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>ParameterExtendedServlet</servlet-name>
		<servlet-class>com.cct.inhouse.bkonline.web.config.parameter.servlet.ParameterExtendedServlet</servlet-class>
		<init-param>
			<param-name>parameterfile</param-name>
			<param-value>/WEB-INF/parameter-extended.xml</param-value>
		</init-param>
		<load-on-startup>5</load-on-startup>
	</servlet>
	<servlet-mapping>
    	<servlet-name>ParameterServlet</servlet-name>
	    <url-pattern>/ParameterServlet</url-pattern>
  	</servlet-mapping>
  		<servlet>
		<servlet-name>BKOnlineRMIServlet</servlet-name>
		<servlet-class>com.cct.inhouse.bkonline.web.config.rmi.servlet.BKOnlineRMIServlet</servlet-class>
		<load-on-startup>6</load-on-startup>
	</servlet>
	<servlet-mapping>
    	<servlet-name>BKOnlineRMIServlet</servlet-name>
	    <url-pattern>/BKOnlineRMIServlet</url-pattern>
  	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>jsp/security/permission.jsp</welcome-file>
	</welcome-file-list>
</web-app>